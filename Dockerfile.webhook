FROM python:3.12-slim

WORKDIR /app

# Install uv - fast Python package installer
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy project files
COPY pyproject.toml ./
COPY README.md ./
COPY webhook_server.py ./
COPY scripts/ollama_pr_review.py ./scripts/
COPY .github/ ./.github/

# Install Python dependencies using uv (much faster than pip)
RUN uv pip install --system --no-cache flask flask-cors httpx requests

# Create necessary directories
RUN mkdir -p /app/logs

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    OLLAMA_BASE_URL=http://host.docker.internal:11434 \
    OLLAMA_MODEL=qwen2.5:14b-q4 \
    OLLAMA_TIMEOUT=120.0 \
    PORT=5000 \
    REVIEW_SCRIPT_PATH=/app/scripts/ollama_pr_review.py

# Expose webhook port
EXPOSE 5000

# Health check using Python (no curl dependency needed)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:5000/health').read()" || exit 1

# Run webhook server
CMD ["python", "webhook_server.py"]
