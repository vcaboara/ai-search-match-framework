FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements files
COPY pyproject.toml ./
COPY README.md ./

# Install Python dependencies
RUN pip install --no-cache-dir flask flask-cors httpx requests

# Copy webhook server and review script
COPY webhook_server.py ./
COPY scripts/ollama_pr_review.py ./scripts/

# Copy .github directory for CODE_REVIEW_PATTERNS.md
COPY .github/ ./.github/

# Create necessary directories
RUN mkdir -p /app/logs

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    OLLAMA_BASE_URL=http://host.docker.internal:11434 \
    OLLAMA_MODEL=qwen2.5:14b-q4 \
    OLLAMA_TIMEOUT=120.0 \
    PORT=5000 \
    REVIEW_SCRIPT_PATH=/app/scripts/ollama_pr_review.py

# Expose webhook port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Run webhook server
CMD ["python", "webhook_server.py"]
